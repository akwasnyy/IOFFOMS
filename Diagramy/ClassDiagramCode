@startuml

class Klient {
    - id: int
    - imie: string
    - email: string
    - nr_tel: string
}

class Zamowienie {
    - id: int
    - status: string
    - data: datetime
    - metodaPlatnosci: string
    + obliczCene(): float
}

class PozycjaZamowienia {
    - ilosc: int
    + obliczCene(): float
}

class Produkt {
    - id: int
    - nazwa: string
    - cena: float
    - opis: string
}

class Administrator {
    - id: int
    - login: string
    + zarzadzajMenu()
    + przegladajStatystyki()
}

class PracownikKuchni {
    - id: int
    - imie: string
    + przetworzZamowienie()
}

Klient "1" --> "0..*" Zamowienie
Zamowienie "1" --> "1..*" PozycjaZamowienia
PozycjaZamowienia "1" --> "1" Produkt

Administrator --> Produkt : zarzÄ…dza
PracownikKuchni --> Zamowienie : przetwarza

@enduml
